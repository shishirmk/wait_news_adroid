<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:id="@+id/address_info">
        
	     <TextView android:id="@+id/name"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:gravity="left"
	       android:textStyle="bold"
	       android:textSize="18sp"
	       android:textColor="#222222"
	       android:layout_marginTop="2dp"
	       android:layout_marginBottom="2dp" />
	    
	    <TextView android:id="@+id/address_line1"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:gravity="left"
	       android:textSize="15sp"
	       android:textColor="#999999" />
	    
	    <TextView android:id="@+id/address_line2"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:gravity="left"
	       android:textSize="15sp"
	       android:textColor="#999999"  />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_info" >
    
     	<TextView android:id="@+id/slider_header"
	       android:textIsSelectable="true" 
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:gravity="left"
	       android:text="@string/slider_header"
	       android:textSize="20sp"
	       android:textColor="#999999"  />

     	<SeekBar
     	    android:id="@+id/seekBar1"
     	    android:layout_width="match_parent"
     	    android:layout_height="wrap_content"
     	    android:layout_alignParentLeft="true"
     	    android:layout_alignParentTop="true"
     	    android:layout_marginTop="40dp" />

     	<Button
     	    android:id="@+id/button1"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content"
     	    android:layout_alignParentLeft="true"
     	    android:layout_below="@+id/seekBar1"
     	    android:layout_marginTop="19dp"
     	    android:text="@string/slider_submit" />
	        
    </RelativeLayout>

</RelativeLayout>